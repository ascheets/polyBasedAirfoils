classdef poly
    properties
        a0
        a1
        a2
        a3
        
        lowerBound
        upperBound
        
        %perhaps include property for data?
        %should the polynomial know about the angle of attack?
        
        
    end
    
    methods
        function p = poly(coeffs, upperBound, lowerBound)
            
            p.a0 = coeffs(1);
            p.a1 = coeffs(2);
            p.a2 = coeffs(3);
            p.a3 = coeffs(4);
            
            p.lowerBound = lowerBound;
            p.upperBound = upperBound;
            
        end
    end
    
    methods (Static = true)    
        function writeVertices()
            
            
            
        end
    end
    
end